{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "composite": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "src/type.d.ts",
    "../types/src/jsx.d.ts",
    "../animation-builder/src/items",
    "../animation-builder/src/interpolation",
    "src/index.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
